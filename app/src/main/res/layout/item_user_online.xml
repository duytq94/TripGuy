<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_user_online_vertical_civ_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_avatar"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_user_online_vertical_tv_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="long"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/item_user_online_vertical_tv_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="long@gmail.com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_user_online_iv_indicator"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/green_circle"/>

            <TextView
                android:id="@+id/item_user_online_tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Online"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>