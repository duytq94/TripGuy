<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="150dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_province_detail_it_place_iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/photo_not_available"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/item_province_detail_it_place_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.dfa.vinatrip.custom_view.SimpleRatingBar
                android:id="@+id/item_province_detail_it_place_srb_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srb_borderColor="#088b0c"
                app:srb_fillColor="#088b0c"
                app:srb_isIndicator="true"
                app:srb_numberOfStars="5"
                app:srb_rating="3.5"
                app:srb_starBorderWidth="1"
                app:srb_starSize="9dp"
                app:srb_starsSeparation="3dp"
                app:srb_stepSize="0.5"/>

            <TextView
                android:id="@+id/item_province_detail_it_place_tv_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0 Reviews"
                android:textSize="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_province_detail_it_place_tv_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="70.3 km"
            android:textSize="8dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>