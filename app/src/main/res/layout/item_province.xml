<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_view_corner_radius"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_province_iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/photo_not_available"/>

        <com.dfa.vinatrip.widgets.RotateLoading
            android:id="@+id/item_province_rotate_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:loading_width="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorBlackTransparent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_province_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_not_available"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium"/>

            <TextView
                android:id="@+id/item_province_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_not_available"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_medium"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>