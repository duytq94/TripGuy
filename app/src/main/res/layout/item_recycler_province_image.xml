<?xml version="1.0" encoding="utf-8"?>
<!-- Show list cardview photo in destination, food, hotel... -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_recycler_province_image_iv_photos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/photo_not_available"
            tools:ignore="ContentDescription"/>

        <com.dfa.vinatrip.widgets.RotateLoading
            android:id="@+id/item_recycler_province_image_rotate_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:loading_width="3dp"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>