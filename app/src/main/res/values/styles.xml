<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorMain</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- change color of text hint at login -->
        <item name="android:textColorHint">@color/colorMain</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorRatingStar</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="autoCompleteTextViewStyle">@style/cursorColor</item>
    </style>
    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

</resources>
