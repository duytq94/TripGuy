<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >

    <ImageView
        android:id="@+id/item_background_plan_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scaleType="fitXY"
        android:src="@drawable/bg_test3"
        />

    <ImageView
        android:id="@+id/item_background_plan_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#8c000000"
        />

    <ImageView
        android:id="@+id/item_background_plan_iv_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_border_green"
        android:visibility="gone"
        />
</FrameLayout>