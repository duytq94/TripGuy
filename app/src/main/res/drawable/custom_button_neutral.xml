<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="3dp" android:color="@color/colorDeepGray" />
            <gradient android:angle="-90" android:endColor="@color/colorDeepGray" android:startColor="@color/colorDeepGray" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dp" />
            <stroke android:width="3dp" android:color="@android:color/darker_gray" />
            <gradient android:angle="-90" android:endColor="@android:color/darker_gray" android:startColor="@android:color/darker_gray" />
        </shape>
    </item>
</selector>