<?xml version="1.0" encoding="utf-8"?>
<!-- Pull down page, data will load again -->
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_each_province_hotel_srlReload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- Combine two types of scroll, if not, two scroll bar will show -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_view_margin"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/text_view_padding"
                        android:text="@string/contact"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_large"
                        />

                    <LinearLayout
                        android:id="@+id/fragment_each_province_hotel_ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_location2"
                            />

                        <TextView
                            android:id="@+id/fragment_each_province_hotel_tv_address"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            />

                        <ImageView
                            android:id="@+id/fragment_each_province_hotel_iv_map"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_each_province_hotel_ll_phone"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_call"
                            />

                        <TextView
                            android:id="@+id/fragment_each_province_hotel_tv_phone"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:padding="@dimen/text_view_padding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_each_province_hotel_ll_website"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_web"
                            />

                        <TextView
                            android:id="@+id/fragment_each_province_hotel_tv_website"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:padding="@dimen/text_view_padding"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_each_province_hotel_ll_mail"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:orientation="horizontal"
                        android:weightSum="5"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_mail"
                            />

                        <TextView
                            android:id="@+id/fragment_each_province_hotel_tv_mail"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:padding="@dimen/text_view_padding"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/recycler_view_padding"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/text_view_padding"
                        android:text="@string/photo"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_large"
                        />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/fragment_each_province_hotel_rv_photos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:padding="@dimen/recycler_view_padding"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_view_margin"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/text_view_padding"
                        android:text="@string/description"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_large"
                        />

                    <TextView
                        android:id="@+id/fragment_each_province_hotel_tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/text_view_padding"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
